<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/light_property_visible_stage_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/subcomponent_list_item_light_bg">


    <ImageButton
        android:id="@+id/light_property_visible_stage_duplicate_button"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="#B1651D"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/light_property_visible_stage_drag_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_duplicate" />

    <ImageButton
        android:id="@+id/light_property_visible_stage_delete_button"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="#9E2B2B"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/light_property_visible_stage_duplicate_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete" />

    <ImageView
        android:id="@+id/light_property_visible_stage_drag_indicator"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@color/subcomponent_list_item_dark_bg"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_hamburger" />

    <ImageView
        android:id="@+id/light_property_visible_stage_state_image_view"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="#0064B1"
        android:baselineAlignBottom="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/light_property_visible_stage_length_text_view"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="60"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/light_property_visible_stage_delete_button"
        app:layout_constraintStart_toEndOf="@+id/light_property_visible_stage_state_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/light_property_visible_stage_state_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="ON"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/light_property_visible_stage_delete_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/light_property_visible_stage_state_image_view" />

    <View
        android:id="@+id/light_property_visible_stage_line_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#E6E6E6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/light_property_visible_stage_delete_button"
        app:layout_constraintStart_toEndOf="@+id/light_property_visible_stage_state_image_view"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>