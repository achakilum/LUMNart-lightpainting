<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pattern_directory_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pattern_directory_dialog_mid_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/pattern_directory_dialog_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pattern_directory_dialog_pattern_image_view"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:background="@color/dark_blue"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@+id/pattern_directory_dialog_mid_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pattern_directory_dialog_title_view"
        app:srcCompat="@drawable/ic_star5ptround" />

    <ImageView
        android:id="@+id/pattern_directory_dialog_directory_image_view"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:background="@color/dark_green"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pattern_directory_dialog_mid_guideline"
        app:layout_constraintTop_toBottomOf="@+id/pattern_directory_dialog_title_view"
        app:srcCompat="@drawable/ic_folder" />

    <Button
        android:id="@+id/pattern_directory_dialog_pattern_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Make new Pattern"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pattern_directory_dialog_mid_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pattern_directory_dialog_pattern_image_view" />

    <Button
        android:id="@+id/pattern_directory_dialog_directory_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/green"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Make new Folder"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pattern_directory_dialog_mid_guideline"
        app:layout_constraintTop_toBottomOf="@+id/pattern_directory_dialog_directory_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>